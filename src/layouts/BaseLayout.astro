---
import BaseHead from "../components/BaseHead.astro";
import { SITE_INFO } from "../consts";
import type { ImageMetadata } from "astro";
import FallbackImage from "../../public/me.png";

interface Props {
    titleOverride?: string;
    descriptionOverride?: string;
    imageOverride?: ImageMetadata;
    slugOverride?: string;
}

const {
    titleOverride: title = SITE_INFO.title,
    descriptionOverride: description = SITE_INFO.siteDescription,
    imageOverride: image = FallbackImage,
    slugOverride: slug = "me",
} = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead {title} {description} {image} />
    </head>
</html>
